<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CongratsBottomSheetFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/protestriot_regular"
            android:text="Congrats\nYour Order Placed"
            android:textAlignment="center"
            android:textColor="@color/textcolor"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/congratulation"
            android:layout_marginTop="32dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/GoHome"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Go Home"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/protestriot_regular"
            android:textSize="20sp"
            android:background="@drawable/gohomeshape"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>